{
  "name": "hardhat-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "npx hardhat clean && rm -rf cache coverage coverage.json",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage --testfiles ./test/unit/index.test.js",
    "test": "npx hardhat test ./test/index.test.js",
    "test:unit": "npx hardhat test ./test/unit/index.test.js",
    "test:integrate": "npx hardhat test ./test/integrate/index.test.js",
    "rpc": "npx hardhat node",
    "deploy:localhost": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:ganache": "npx hardhat run scripts/deploy.js --network ganache",
    "deploy:ropsten": "npx hardhat run scripts/deploy.js --network ropsten",
    "deploy:rinkeby": "npx hardhat run scripts/deploy.js --network rinkeby",
    "deploy:mainnet": "npx hardhat run scripts/deploy.js --network mainnet",
    "verify:ropsten": "npx hardhat verify --network ropsten",
    "verify:rinkeby": "npx hardhat verify --network rinkeby",
    "verify:mainnet": "npx hardhat verify --network mainnet",
    "eslint": "npx eslint '**/*.js'",
    "eslint:fix": "npx eslint '**/*.js' --fix",
    "prettier": "npx prettier '**/*.{json,sol,md}' --check",
    "prettier:fix": "npx prettier '**/*.{json,sol,md}' --write",
    "solhint": "npx solhint 'contracts/**/*.sol'",
    "solhint:fix": "npx solhint 'contracts/**/*.sol' --fix"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.1",
    "@openzeppelin/contracts-upgradeable": "^4.3.2"
  },
  "devDependencies": {
    "ethers": "^5.0.0",
    "ethereum-waffle": "^3.0.0",
    "solidity-coverage": "^0.7.17",
    "hardhat": "^2.6.2",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "hardhat-change-network": "^0.0.7",
    "hardhat-gas-reporter": "^1.0.4",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6"
  }
}
